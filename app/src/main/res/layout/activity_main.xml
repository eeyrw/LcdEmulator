<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- åŽŸæ¥çš„å†…å®¹ä¿æŒä¸åŠ¨ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:orientation="vertical">

        <com.yuan.lcmemulator.CharLcmView
            android:id="@+id/CHAR_LCD_VIEW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            app:isRoundRectanglePixel="false"
            app:lcdPanelColor="@color/LcdPanelColor"
            app:negativePixelColor="@color/NegetivePixelColor"
            app:positivePixelColor="@color/PostivePixelColor"
            app:text="" />

    </LinearLayout>


    <!-- ðŸ”¥ OSD è¦†ç›–å±‚ -->
    <FrameLayout
        android:id="@+id/osdOverlay"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/osdPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
    <!-- å°é½¿è½®æŒ‰é’® -->
    <ImageView
        android:id="@+id/gearButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:alpha="0"
        android:src="@drawable/ic_settings_48"
        android:tint="#CCCCCC"
        android:visibility="gone"
        app:tint="#CCCCCC" />

</FrameLayout>
