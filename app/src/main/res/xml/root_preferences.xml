<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/network_settings_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/portnum_title"
            app:defaultValue="2400"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/ui_header">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefIsRoundBorderPixel"
            android:title="@string/roundborder_title" />
        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="#009688"
            android:key="prefLcdPanelColor"
            android:title="@string/lcd_panel_color_title" />
        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="#EDEDED"
            android:key="prefPositivePixelColor"
            android:title="@string/positive_pixel_color_title" />
        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="#00655B"
            android:key="prefNegativePixelColor"
            android:title="@string/negative_pixel_color_title" />

    </PreferenceCategory>


</PreferenceScreen>